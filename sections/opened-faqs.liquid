{% comment %}
  Simple, fully responsive FAQ section for Shopify
  - No JS
  - Prefixed with "opened-"
  - Uses blocks for dynamic FAQ items
{% endcomment %}

<div class="opened-faq-section">

    {% if section.settings.heading != blank %}
        <div class="opened-faq-header">
        <h2 class="opened-faq-title">{{ section.settings.heading }}</h2>
        </div>
  {% endif %}

  <div class="opened-faq-wrapper">
    {% if collection.metafields.custom.faq_question_one != blank %}
      <div class="opened-faq-item">
        <h3 class="opened-faq-question">
            {{ collection.metafields.custom.faq_question_one | metafield_text }}

        </h3>
        <div class="opened-faq-answer">
          {{ collection.metafields.custom.faq_answer_one | metafield_text }}


        </div>
      </div>
    {% endif %}
    {% if collection.metafields.custom.faq_question_one != blank %}

      <div class="opened-faq-item">
        <h3 class="opened-faq-question">
            {{ collection.metafields.custom.faq_question_two | metafield_text }}

        </h3>
        <div class="opened-faq-answer">
          {{ collection.metafields.custom.faq_answer_two | metafield_text }}


        </div>
      </div>
    {% endif %}
    {% if collection.metafields.custom.faq_question_one != blank %}

      <div class="opened-faq-item">
        <h3 class="opened-faq-question">
            {{ collection.metafields.custom.faq_question_three | metafield_text }}

        </h3>
        <div class="opened-faq-answer">
          {{ collection.metafields.custom.faq_answer_three | metafield_text }}


        </div>
      </div>
    {% endif %}
    {% if collection.metafields.custom.faq_question_one != blank %}

      <div class="opened-faq-item">
        <h3 class="opened-faq-question">
            {{ collection.metafields.custom.faq_question_four | metafield_text }}

        </h3>
        <div class="opened-faq-answer">
          {{ collection.metafields.custom.faq_answer_four | metafield_text }}


        </div>
      </div>
    {% endif %}
    {% if collection.metafields.custom.faq_question_one != blank %}

      <div class="opened-faq-item">
        <h3 class="opened-faq-question">
            {{ collection.metafields.custom.faq_question_five | metafield_text }}

        </h3>
        <div class="opened-faq-answer">
          {{ collection.metafields.custom.faq_answer_five | metafield_text }}


        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .opened-faq-section {
    padding: 50px 20px;
    max-width: 900px;
    margin: 0 auto;
  }

  .opened-faq-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .opened-faq-title {
    font-size: 28px;
    font-weight: 700;
    color: #111;
  }

  .opened-faq-wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .opened-faq-item {
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 20px;
  }

  .opened-faq-question {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 12px;
    color: #222;
  }

  .opened-faq-answer {
    font-size: 16px;
    color: #555;
    line-height: 1.6;
  }

  .opened-faq-answer p {
    margin-bottom: 10px;
  }

  @media (max-width: 768px) {
    .opened-faq-section {
      padding: 40px 15px;
    }

    .opened-faq-title {
      font-size: 24px;
    }

    .opened-faq-question {
      font-size: 20px;
    }

    .opened-faq-answer {
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .opened-faq-section {
      padding: 30px 10px;
    }

    .opened-faq-title {
      font-size: 22px;
    }

    .opened-faq-question {
      font-size: 18px;
    }

    .opened-faq-answer {
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Simple FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "FAQ Section Heading",
      "default": "Frequently Asked Questions"
    }
  ],

  "presets": [
    {
      "name": "Simple FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}
