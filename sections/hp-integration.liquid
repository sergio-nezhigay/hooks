<style>
  .hp-integration {
    padding: 30px 0;

  }
  .hp-integration-border {
    border: 9px solid #75c1ea;
    border-radius: 0 450px 0 0;
    border-bottom: 0;
    border-left: 0;
    margin-right: 50px;
  }
  .hp-integration-content {
    padding: 200px 10px;
    max-width: 800px;
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .hp-integration-content h4 {
    margin: 0 0 10px;
    font-size: 24px;
  }

  .hp-integration-content h2 {
    margin: 0;
    font-size: 36px;
  }
  .hp-integration-content p {
    font-size: 27px;
    text-align: center;
    line-height: 39px;
  }
  .hp-integration-content .hp-integration-buttons {
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }
  .hp-integration-content .hp-integration-buttons a {
    /* width: 50%; */
    text-align: center;
    font-size: 21px;
  }
  .hp-integration-heading {
    padding: 30px 100px;
    text-align: left;
    border-radius: 90px 0 0 0;
    margin-left: 294px;
    background-image: linear-gradient(210deg, #09213a 0%, #094483 36%, #094483 67%, #09213a 100%)
  }
  .hp-integration-heading h3 {
    margin: 0;
    font-size: 36px;
    color: #fff;
    letter-spacing: 1px;
  }

  .hp-integration-flip {
    display: flex;
    flex-wrap: wrap;
    padding: 30px;
    justify-content: center;
  }
  .hp-integration-flip-card {
    width: 40%;
    padding: 50px;
    box-sizing: border-box;
    background-color: transparent;
    perspective: 1000px;
  }
  .hp-integration-flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }
  .hp-integration-flip-card:hover .hp-integration-flip-card-inner {
    transform: rotateY(180deg);
  }
  .flip-card-front img,
  .flip-card-back img {
    width: 100%;
  }
  .flip-card-front h2 {
    margin: 0;
    position: absolute;
    font-size: 56px;
    color: black;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
  }

  .flip-card-back-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    font-size: 24px;
    color: #3f4f62;
    line-height: 30px;
    width: 100%;
    padding: 20px;
    margin: 0;
  }
  .flip-card-front,
  .flip-card-back {
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }
  .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    color: white;
    transform: rotateY(180deg);
  }

  @media screen and (max-width: 756px) {
    .hp-integration {
      padding: 30px 0;
    }
    .hp-integration-border {
      border: 9px solid #75c1ea;
      border-radius: 0 150px 0 0;
      border-bottom: 0;
      border-left: 0;
      margin-right: 20px;
    }
    .hp-integration-content {
      padding: 100px 10px;
      max-width: 800px;
      margin: auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .hp-integration-content h4 {
      margin: 0 0 10px;
      font-size: 21px;
    }

    .hp-integration-content h2 {
      margin: 0;
      font-size: 30px;
      text-align: center;
    }
    .hp-integration-content p {
      font-size: 19px;
      text-align: center;
    }
    .hp-integration-content .hp-integration-buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-direction: column;
      gap: 10px;
      width: 100%;
    }
    .hp-integration-content .hp-integration-buttons a {
      width: 90%;
      max-width: 100%;
      height: 50px;
      text-align: center;
      font-size: 16px;
    }
    .hp-integration-heading {
      padding: 20px 30px;
      text-align: left;
      border-radius: 40px 0 0 0;
      margin-left: 50px;
    }
    .hp-integration-heading h3 {
      margin: 0;
      font-size: 18px;
    }

    .hp-integration-flip-card {
      width: 50%;
      padding: 5px;
    }
    .flip-card-front h2 {
      font-size: 14px;
      width: 100%;
    }
    .flip-card-back-text {
      padding: 5px;

    }

    .flip-card-back p {
      margin: 0;
      font-size: 9.5px;
      line-height: 12px;
    }
  }
</style>

<div class="page-width hp-integration">
  <div class="hp-integration-border">
    <div class="hp-integration-content">
      <h4>
        {{ section.settings.subheading }}
      </h4>
      <h2>
        {{ section.settings.heading }}
      </h2>
      {{ section.settings.description }}
      <div class="hp-integration-buttons">
        {% if section.settings.button1 %}
          <a class="button primary-btn" href="{{ section.settings.button_1_url}}">{{ section.settings.button1 }}</a>
        {% endif %}
        {% if section.settings.button2 %}
          <a class="button secondry-btn" href="{{ section.settings.button_2_url }}">{{ section.settings.button2 }}</a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="hp-integration-heading">
    <h3>
      {{ section.settings.side-heading }}
    </h3>
  </div>

  <div class="hp-integration-flip">


    {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when 'rotating' -%}
          <div class="hp-integration-flip-card">
            <div class="hp-integration-flip-card-inner">
              <div class="flip-card-front">
                <img
                  src="{{ block.settings.front-image |  image_url  }}"
                  alt=""
                  width="auot"
                  height="auto">
                <h2>{{ block.settings.front-text }}</h2>
              </div>
              <div class="flip-card-back">
                <img
                  src="{{ block.settings.back-image |  image_url  }}"
                  alt=""
                  width="auto"
                  height="auot">
                <div class="flip-card-back-text">
                  {{ block.settings.back-text }}
                </div>
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}

  </div>
</div>
{% schema %}
  {
    "name": "HP Integration",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "They're Hooked"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Above the main headline"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "button1",
        "label": "Button-1"
      }, {
        "type": "url",
        "id": "button_1_url",
        "label": "Button 1 Url"
      }, {
        "type": "text",
        "id": "button2",
        "label": "Button-2"
      }, {
        "type": "url",
        "id": "button_2_url",
        "label": "Button 2 Url"
      }, {
        "type": "text",
        "id": "side-heading",
        "label": "Side Heading"
      }
    ],
    "blocks": [
      {
        "type": "rotating",
        "name": "Roatating Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "front-image",
            "label": "Fronte Image"
          }, {
            "type": "text",
            "id": "front-text",
            "label": "Front Text"
          }, {
            "type": "image_picker",
            "id": "back-image",
            "label": "Back Image"
          }, {
            "type": "richtext",
            "id": "back-text",
            "label": "Back Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "HP Integration"
      }
    ]
  }
{% endschema %}