<style>
.faq-wrapper {
  padding: 40px 80px;
}

.faq-title {
  font-size: 46px;
  font-weight: bold;
  text-align: left;
  margin-bottom: 8px;
}

.faq-list {
  border-top: 1px solid #ddd;
}

.faq-item {
  border-bottom: 1px solid #ddd;
}

.faq-question {
  width: 100%;
  text-align: left;
  padding: 16px;
  font-size: 16px;
  background: none;
  border: none;
  cursor: pointer;
  position: relative;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.faq-question .arrow {
  transition: transform 0.3s ease;
}

.faq-question.active .arrow {
  transform: rotate(180deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  padding: 0 16px;
}

.faq-answer p {
  margin: 16px 0;
  color: #333;
}

.faq-grid-cs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
}

.faq-header-content {
  max-width: 400px;
  margin: 0 auto;
}

@media screen and (max-width: 1140px) {
  h2.faq-title {
      font-size: 32px;
      max-width: 290px;
  }

  .faq-wrapper {
      padding: 0;
  }

  .faq-grid-cs {
      grid-template-columns: 3fr 6fr;
  }
}

@media screen and (max-width: 990px) {
  h2.faq-title {
      max-width: 100%;
      text-align: center;
  }

  .faq-header-content {
      max-width: 100%;
  }

  .faq-grid-cs {
      grid-template-columns: 1fr;
      gap: 40px;
  }
}
</style>

<div class="page-width">
<div class="faq-wrapper">
  <div class="faq-grid-cs">
    <div class="faq-header-content">
        <h2 class="faq-title">{{ section.settings.title }}</h2>
    </div>
    <div class="faq-list">
      {% for block in section.blocks %}
      <div class="faq-item">
        <button class="faq-question">
          {{ block.settings.question }}
          <span class="svg-arrow-container">
            <svg
              width="18"
              height="11"
              viewBox="0 0 18 11"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M1 1.0625L9 9.0625L17 1.0625"
                stroke="#212121"
                stroke-width="1.5"
              ></path>
            </svg>
          </span>
        </button>
        <div class="faq-answer">
          <p>{{ block.settings.answer }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const questions = document.querySelectorAll(".faq-question");

  questions.forEach((question) => {
    question.addEventListener("click", () => {
      const isActive = question.classList.contains("active");

      // Close all open questions
      questions.forEach((q) => {
        q.classList.remove("active");
        q.nextElementSibling.style.maxHeight = null;
      });

      // Open clicked question
      if (!isActive) {
        question.classList.add("active");
        const answer = question.nextElementSibling;
        answer.style.maxHeight = answer.scrollHeight + "px";
      }
    });
  });

  // Open the first FAQ by default
  if (questions.length > 0) {
    const firstQuestion = questions[0];
    const firstAnswer = firstQuestion.nextElementSibling;
    firstQuestion.classList.add("active");
    firstAnswer.style.maxHeight = firstAnswer.scrollHeight + "px";
  }
});
</script>
{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Section title",
        "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}