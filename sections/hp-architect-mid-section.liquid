<style>
  .learn-more-architect-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    padding-left: 0;
    padding-right: 0;
  }
  .learn-more-architect .learn-more-heading-main {
    text-align: center;
    font-family: 'McLaren'
    , sans-serif;
    font-weight: normal;
    font-style: normal;
  }
  .learn-more-architect .learn-more-heading-main h2 {
    margin: 0;
    font-size: 30px;
  }
  .learn-more-architect .learn-more-heading-main p {
    margin: 0;
    font-size: 20px;
  }
  .learn-more-architect .learn-more-heading {
    position: relative;
  }
  .learn-more-architect .learn-more-heading-main {
    font-size: {{ section.settings.heading_size }}px;
    padding: 30px 100px;
    text-align: left;
    border-radius: 90px 0 0 0;
    margin-left: 294px;
    position: relative;
    z-index: 2;
  }
  .learn-more-architect .learn-more-sub-head {
    border-radius: 150px;
    padding: 80px 80px 50px;
    margin-left: 30px;
    margin-right: 30px;
    position: relative;
    z-index: 1;
    transform: translateY(-35px);
    background-image: linear-gradient(210deg, #09213a 0%, #094483 36%, #094483 67%, #09213a 100%) !important;
    font-size: 32px;
    font-weight: 300;
    font-family: "Zain";
  }
  .learn-more-architect .learn-more-button {
    width: 100%;
    margin-top: 40px;
    text-align: center;

  }

  .learn-more-architect .learn-more-cols {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 20px;
    padding: 100px 30px 30px;
  }
  .learn-more-cols-left h3,
  .learn-more-cols-right h3 {
    font-weight: 400;
    color: #fff;
    font-family: "McLaren";
    margin-bottom: 10px;
    text-align: center;
  }
  .learn-more-cols-left h4,
  .learn-more-cols-right h4 {
    text-align: center;
    font-size: 21px;
    color: #fff;
    font-weight: 400;
    margin-bottom: 30px;
  }
  .learn-more-cols-left p,
  .learn-more-cols-right p {
    font-size: 28px;
    color: #fff;
    font-weight: 300;
    text-align: center;
  }
  .learn-more-cols-left {
    border-right: 3px solid #fff;
    padding: 50px;
    width:50%;
  }
  .learn-more-cols-right {
    padding: 50px;
    width:50%;
  }


  @media screen and (max-width: 756px) {
    .learn-more-architect-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top }}px;
      padding-bottom: {{ section.settings.section_padding_bottom }}px;
      padding-left: 0;
      padding-right: 0;
    }
    .learn-more-architect .learn-more-heading-main {
      font-size: 21px;
      padding: 10px 30px;
      text-align: left;
      border-radius: 50px 0 0 0;
      margin-left: 20%;
      position: relative;
      z-index: 2;
      padding-right: 10px;
    }
    .learn-more-architect .learn-more-heading-main h2 {
      font-size: 15px;
    }
    .learn-more-architect .learn-more-heading-main p {
      font-size: 14px;
    }
    .learn-more-architect .learn-more-heading-main h1 {
      font-size: 18px;
      margin-left: 10px;
      text-align: right;
    }
    .learn-more-architect .learn-more-sub-head {
      border-radius: 80px;
      padding: 30px 30px 50px;
      margin-left: 10px;
      margin-right: 10px;
      transform: translateY(-15px);
      font-size: 16px;
      line-height: 20px;

    }
    .learn-more-architect .learn-more-button {
      margin-top: 10px;
    }


    .learn-more-architect .learn-more-cols {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 20px;
      padding: 10px;
    }
    .learn-more-cols-left h3,
    .learn-more-cols-right h3 {
      font-weight: 400;
      color: #fff;
      font-family: "McLaren";
      margin-bottom: 10px;
      text-align: center;
      font-size: 21px;
    }
    .learn-more-cols-left h4,
    .learn-more-cols-right h4 {
      text-align: center;
      font-size: 18px;
      color: #fff;
      font-weight: 400;
      margin-bottom: 10px;
    }
    .learn-more-cols-left p,
    .learn-more-cols-right p {
      font-size: 18px;
      color: #fff;
      font-weight: 300;
    }
    .learn-more-cols-left {
      border-right: 0 solid #fff;
      border-bottom: 3px solid #fff;
      padding: 10px;
      width:100%;
    }
    .learn-more-cols-right {
      padding: 10px;
      width:100%;
    };

  }
</style>

<div class="page-width learn-more-architect learn-more-architect-{{ section.id }} ">
  <div class="learn-more-heading">
    <div
      class="learn-more-heading-main"
      style="background:{{ section.settings.heading_background }};color:{{ section.settings.heading_color }}"
    >
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.sub_head }}</p>
    </div>
    <div
      class="learn-more-sub-head"
      style="background:{{ section.settings.sub_heading_background }}; color:{{ section.settings.sub_heading_color }}"
    >
      <div class="learn-more-cols">
        <div class="learn-more-cols-left">
          <h3>{{ section.settings.sub_heading_1 }}</h3>
          <h4>{{ section.settings.heading_1 }}</h4>
          {{ section.settings.description_1 }}
        </div>
        <div class="learn-more-cols-right">
           <h3>{{ section.settings.sub_heading_2 }}</h3>
          <h4>{{ section.settings.heading_2 }}</h4>
          {{ section.settings.description_2 }}
        </div>
      </div>
    </div>
  </div>
</div>
