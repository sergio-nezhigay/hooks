<style>
  .shop-collection-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  .shop-collection-heading {
    text-align: center;
    font-family: 'McLaren'
    , sans-serif;
    font-weight: normal;
    font-style: normal;
  }
  .shop-collection-heading {
    font-size: {{ section.settings.heading_size }}px;
    padding: 30px 0 0;
  }
  .shop-collection-sub-heading {
    text-align: center;
    font-size: 30px;
    line-height: 34px;
    color: #2c2e35;
    font-weight: 300;
    font-family: "Zain";
  }
  .shop-collection-columns {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 70px;
    padding: 50px 0;
  }
  .shop-collection-column {
    /* width: 295px; */
    /* height: 290px; */
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 37px;
  }
  .shop-collection-img {
    width: 100%;
    height: 80%;
    display: flex;
    justify-content: center;
  }
  .shop-collection-img a{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
  }
  .shop-collection-img img {
    /* width: 70%; */
    object-fit: contain;
  }
  .shop-collection-link {
    z-index: 2;
    font-size: 30px;
    line-height: 31px;

    font-weight: bold;
    font-family: "Zain";
    text-align: center;
    margin: 20px 0;
  }
  .shop-collection-link a {
    text-decoration: none;
    color: #22294F;
  }

  @media screen and (max-width: 756px) {
    .shop-collection-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top }}px;
      padding-bottom: {{ section.settings.section_padding_bottom }}px;
      padding-left: 30px;
      padding-right: 30px;
    }
