  <div class="shop-collection-columns">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collection-cols' %}
        
          <div class="shop-collection-column" styles="border: 5px solid {{ block.settings.col_border_color }};">
            
            <div class="shop-collection-img">
              {% if block.settings.col_img %}
                <a href="{{ block.settings.collection_link }}">
                 <img
                   src="{{ block.settings.col_img | image_url }}"
                   style="width: 100%; height:auto; transform: scale({{ block.settings.block_image_scale }});"
                   alt="Image description"
                  />
                 </a>
              {% endif %}
            </div>
            <div class="shop-collection-link">
              <a href="{{ block.settings.collection_link }}">{{ block.settings.collection_link_text }}</a>
            </div>
            
          </div>
        
      {% endcase %}
    {% endfor %}
  </div>

</div>

{% schema %}
  {
    "name": "HP Collection Columns",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Heading Font Size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 25
      },
      {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Sub Heading"
      },
      {
        "type": "range",
        "id": "section_padding_top",
        "label": "Section Padding Top",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 50
      }, {
        "type": "range",
        "id": "section_padding_bottom",
        "label": "Section Padding Bottom",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 50
      }
    ],
    "blocks": [
      {
        "type": "collection-cols",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "col_img",
            "label": "Png Image"
          },
          {
            "type": "color",
            "id": "col_border_color",
            "label": "Border Color"
          },
          {
            "type": "range",
            "id": "block_image_scale",
            "label": "Image size",
            "min": 1,
            "max": 5,
            "step": 0.1,
            "unit": "%",
            "default": 1
          },
          {
            "type": "text",
            "id": "collection_link_text",
            "label": "Collection Text"
          }, {
            "type": "url",
            "id": "collection_link",
            "label": "Collection Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "HP Collection Columns"
      }
    ]
  }
{% endschema %}