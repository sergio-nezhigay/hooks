<div class="section-{{ section.id }} hp-text-images page-width hp-architect-hero {{ section.settings.Seciton_custom_dyn_class }}">
  <div class="hp-text-images-content">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when 'subheading' -%}
          <h3>{{ block.settings.subheading }}</h3>
        {%- when 'heading' -%}
          <h1>{{ block.settings.heading }}</h1>
        {%- when 'description' -%}
          {{ block.settings.description }}
      {% endcase %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "HP Architect Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background"
      }
      ,
      {
            "type": "text",
            "id": "Seciton_custom_dyn_class",
            "label": "Custom Class"
          }
    ],
    "blocks": [
      {
        "type": "subheading",
        "name": "Sub Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub Heading"
          }
        ]
      }, {
        "type": "heading",
        "name": "Heading",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "heading",
            "label": "Heading"
          }
        ]
      }, {
        "type": "description",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "HP Architect Hero"
      }
    ]
  }
{% endschema %}