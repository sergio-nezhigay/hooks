<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

<style>
  #shopify-section-{{ section.id }} .landing-page-quote {
    min-height: auto;
    background: #ffff;
    border-radius: 39px;
    /* padding: 50px 0; */
    padding: 0px;
    text-align: center;
    margin: 0 5px;
  }

  #shopify-section-{{ section.id }} .home-quote {
    width: 100%;
    margin: 1rem 0;
  }

  #shopify-section-{{ section.id }} .home-quote-sec {
    /* background-color: #f9f9f9; /* Replaces `bg-color-light` */ */
    padding: 3rem 0; /* Equivalent to `py-12` */
    margin-top: 4.5rem; /* Equivalent to `mt-18` */
  }

  #shopify-section-{{ section.id }} .home-quote-sec-lg {
    /* padding: 6rem 0; /* Equivalent to `lg:py-24` */ */
    margin-top: 7.5rem; /* Equivalent to `lg:mt-30` */
  }

  #shopify-section-{{ section.id }} .home-quote-slider {
    height: auto;
    display: flex;
    /* flex-wrap: wrap; */
    padding: 0 2rem; /* Equivalent to `px-8 py-0` */
  }

  #shopify-section-{{ section.id }} .home-quote-slider-md {
    padding: 0; /* Equivalent to `md:px-0` */
  }

  #shopify-section-{{ section.id }} .container {
    max-width: 1400px;
    margin: 0 auto;
  }
  .slick-track {
    position: relative;
    top: 0;
    left: 0;
    display: flex;
    margin-left: auto;
    margin-right: auto;
    align-items: center;
    max-height: 680px;  /* Manan css */
}
  @media screen and (max-width: 431px) {
  .slick-track {
    max-height: 775px;  /* Manan css */
 }
}

  @media only screen and (min-width: 1022px) {
    #shopify-section-{{ section.id }} .home-quote {
      width: 33%;
    }

    #shopify-section-{{ section.id }} .landing-page-quote {
      margin: 0 25px;
    }
  }
  .subheadline {
    margin: 1rem 0;
    padding-bottom: 1rem;
  }
</style>
<style>
  .landing-page-quote {
    height: auto;
  }

  .landing-page-quote.flex-layout {
    display: flex;
    flex-direction: column;
  }

  .landing-page-quote.flex-layout-lg {
    flex-direction: row;
    justify-content: space-around;
  }

  .landing-page-quote img {
    padding: 2rem 0; /* Replaces `py-8` */
    margin: 0 auto;
    max-width: 150px;
  }

  .content-wrapper {
    margin: 0 auto;
    width: 83.333%; /* Equivalent to `w-10/12` */
    max-width: 100rem; /* Equivalent to `max-w-3xl` */
  }

  .content-wrapper .stars {
    margin: 0 auto;
    max-width: 150px;
  }

  .home-quote-sec blockquote {
    /* font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif, 
      "Apple Color Emoji", "Segoe UI Emoji" !important; */
    padding: 0;
    margin:0;
    border: 0;
    /* font-size:16px; */
    font-size:45px;
    /* line-height:21px; */
    line-height:40px;
  }

  cite {
    color: #146E99; /* Replace `text-primary` */
    font-weight: 900; /* Replaces `font-black` */
    display: grid;
    margin-top: 1rem; /* Replaces `mt-4` */
    font-style: normal; /* Replaces `not-italic` */
  }

  .cite-lg {
    font-size: 4rem; 
    /* font-size: 2rem;/* Equivalent to `lg:text-2xl` */ */
  }

  .verified-reviewer {
    font-weight: bold; /* Replaces `font-bold` */
    font-size: 0.875rem; /* Equivalent to `text-sm` */
  }

  .verified-reviewer-lg {
    /* font-size: 1rem; /* Equivalent to `lg:text-base` */ */
    font-size: 2rem;
  }

  @media only screen and (min-width: 1024px) {
    .landing-page-quote.flex-layout {
      flex-direction: row;
      justify-content: space-around;
    }
  }
 .my-arrow-prev{
   /* color: white; */
    /* height: 30px; */
    /* width: 30px; */
    padding: 15px;
    display: flex;
    border-radius: 50%;
    align-self: center;
    font-size: 25px;
    /* background: gray; */
    justify-content: center;
    align-items: center;
    margin-right: 20px;
   transform: rotate(180deg);
  }
  .my-arrow-next{
    /* color: white; */
    /* height: 30px; */
    /* width: 30px; */
    padding: 15px;
    display: flex;
    border-radius: 50%;
    align-self: center;
    font-size: 25px;
    /* background: gray; */
    justify-content: center;
    align-items: center;
    margin-left: 20px;
    /* transform: rotate(180deg); */
  }
    .my-arrow-next svg, .my-arrow-prev svg{
      fill: #146e99;
    width: 16px;
    height: 16px;
    }
  .my-arrow-next:hover svg, .my-arrow-prev:hover svg{
      fill: white;
    }
  .my-arrow-next:hover, .my-arrow-prev:hover {
      background: #146e99;
    }
  
  @media screen and (max-width:768px){
 .my-arrow-prev{
    margin-left: 10px;
    margin-right: 20px;
  }
  .my-arrow-next{
   margin-right: 10px;
    margin-left: 20px;
  }
    
  }
  @media screen and (max-width:431px){
    .home-quote-sec blockquote {
     font-size:19px;
              line-height: 21px;
    }
  }
</style>


<div class="page-width home-quote-sec home-quote-sec-lg" style="margin:0 auto;">
  <div class="container">
    <h2 class="subheadline">{{ section.settings.title }}</h2>
    <div class="home-quote-slider home-quote-slider-md">
      {%- for block in section.blocks -%}
        <div class="home-quote">
          {% assign quote = block.settings.quote %}
          {% assign  author = block.settings.author %}
         <div class="landing-page-quote {% if quoteImage %}flex-layout flex-layout-lg{% endif %}">
       {% if quoteImage %}
        <img src="{{ quoteImage }}" alt="Quote Image">
        {% endif %}

    <div class="content-wrapper">
        <div class="stars">
            <img src="{{ 'stars.svg' | asset_url }}" alt="Stars">
        </div>

        <blockquote>
            {{ quote }}
            <cite class="cite-lg">
                {{ author }}
                <span class="verified-reviewer verified-reviewer-lg">Verified Reviewer</span>
            </cite>
        </blockquote>
    </div>
</div>

        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

