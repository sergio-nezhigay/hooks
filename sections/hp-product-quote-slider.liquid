<script>
  $('.home-quote-slider').slick({
          infinite:true,
          slidesToShow: 1,
          slidesToScroll: 1,
          dots: false,
          prevArrow: '<div href="#" class="my-arrow-next"><svg class="svg sv-srarrow" aria-hidden="true" width="24" height="24" role="img"><use href="#sv-slarrow" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#sv-slarrow"></use></svg></div>',
          nextArrow: '<div href="#" class="my-arrow-prev"><svg class="svg sv-srarrow" aria-hidden="true" width="24" height="24" role="img"><use href="#sv-slarrow" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#sv-slarrow"></use></svg></div>',
          responsive: [
          {
          breakpoint: 768,
          settings: {
          slidesToShow: 1,
          slidesToScroll: 1
          }
        }
       ]
      });
</script>
{% schema %}
{
  "name":"HP Product Quote Slider",
  "settings":[
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks":[
    {
      "type": "quote_slider",
      "name": "Quote Slide",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "The author"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "The quote"
        }
      ]
    }
  ],
  "presets": [
    {
      "name":"HP Product Quote Slider"
    }
  ]
}
{% endschema %}