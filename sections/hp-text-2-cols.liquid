<style>
  /* Container Styling */
.text-features-container {
    margin-top: 64px; /* Matches my-16 from Tailwind (16 * 4px) */
}

/* Text Feature Grid */
.text-features {
    display: grid;
    gap: 24px; /* Matches gap-6 */
}

@media (min-width: 768px) {
    .text-features {
        grid-template-columns: repeat(2, 1fr); /* Matches md:grid-cols-2 */
    }
}

/* Feature Block Styling */
.text-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding: 32px; /* Matches p-8 */
    background-color: #f5f5f5; /* Default color, overridden dynamically */
}

@media (min-width: 1024px) {
    .text-feature {
        padding: 64px; /* Matches lg:p-16 */
        flex-direction: row; /* Matches md:flex-row */
    }
}

/* Colors (Add more as needed) */
.bg-yellow-100 {
    background-color: #fefcbf;
}

.bg-blue-100 {
    background-color: #ebf8ff;
}

.bg-red-100 {
    background-color: #fed7d7;
}

.bg-purple-100 {
    background-color: #faf5ff;
}

.text-yellow-300 {
    color: #ecc94b;
}

.text-blue-300 {
    color: #63b3ed;
}

.text-red-300 {
    color: #fc8181;
}

.text-purple-300 {
    color: #d6bcfa;
}

/* Text and Button Styling */
.text-primary {
    color: #333; /* Replace with your primary color */
}

.subtitle {
    text-transform: uppercase;
    font-weight: bold;
    font-size: 12px;
    letter-spacing: 0.1em;
    margin-bottom: 8px;
}

.title {
    font-weight: 900;
    font-size: 24px;
    margin-bottom: 16px;
}

@media (min-width: 1024px) {
    .title {
        font-size: 32px; /* Matches lg:text-4xl */
    }
}

.body-text {
    margin: 16px 0; /* Matches my-4 */
}

.btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: #007acc;
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 4px;
}

</style>
<div class="page-width text-features-container text-feature-container">
    <div class="text-features">
        {% for block in section.blocks %}
        <div class="text-feature bg-{{ block.settings.color }}-100">
            {% if block.settings.image %}
            <img class="feature-image" src="{{ block.settings.image | img_url: 'medium'}}" alt="{{ block.settings.title }}">
            {% endif %}
            <div class="text-primary">
                <span class="subtitle text-{{ block.settings.color }}-300">{{ block.settings.subtitle }}</span>
                <h2 class="title">{{ block.settings.title }}</h2>
                <p class="body-text">{{ block.settings.body }}</p>
                {% if block.settings.link %}
                <a class="btn" href="{{ block.settings.link }}">Shop Now</a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
"name": "HP Text Feature (2 cols)",
"settings": [
    
],
"blocks": [
    {
        "type": "feature",
        "name": "Add Text Feature",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title of Feature"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "The eyebrow subtitle"
            },
            {
                "type": "text",
                "id": "body",
                "label": "Main Text of Feature"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link"
            },
            {
                "type": "select",
                "id": "color",
                "label": "Choose a color to use",
                "options": [
                    {
                        "value": "yellow",
                        "label": "Yellow"
                    },
                    {
                        "value": "blue",
                        "label": "Blue"
                    },
                    {
                        "value": "red",
                        "label": "Red"
                    },
                    {
                        "value": "purple",
                        "label": "Purple"
                    }
                ]
            }
        ]
    }
],
"presets": [
    {
      "name": "HP Text Feature (2 cols)",
    }
  ]
}
{% endschema %}