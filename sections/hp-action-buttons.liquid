<style>
  .hp-action-buttons {
    padding: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }
  .action-button-heading {
    text-align: center;
    color: #ed8177;
    font-size: 26px;
  }
</style>
<div class="page-width section-{{section.id}}">
  {% if section.settings.heading != blank %}
    <div class="action-button-heading">{{ section.settings.heading }}</div>
  {% endif %}
  <div class="hp-action-buttons">

{% comment %} popup trigger class remove from a tag for back up to show again popup
    .custom_popup_trigger {% endcomment %}

    {% if section.settings.button1 != blank and section.settings.show_button_1 %}
      <a class="button primary-btn request " href="{{ section.settings.button_1_url}}">{{ section.settings.button1 }}</a>
    {% endif %}
    {% if section.settings.button2 != blank and section.settings.show_button_2 %}
      <a class="button secondry-btn" href="{{ section.settings.button_2_url }}">{{ section.settings.button2 }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "HP Action Buttons",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "checkbox",
        "id":"show_button_1",
        "label": "Show Button 1",
        "default":true
      },
      {
        "type": "text",
        "id": "button1",
        "label": "Button-1"
      },
      {
        "type": "url",
        "id": "button_1_url",
        "label": "Button 1 Url"
      },
      {
        "type": "checkbox",
        "id":"show_button_2",
        "label": "Show Button 2",
        "default":true
      },
      {
        "type": "text",
        "id": "button2",
        "label": "Button-2"
      }, {
        "type": "url",
        "id": "button_2_url",
        "label": "Button 2 Url"
      }
    ],
    "presets": [
      {
        "name": "HP Action Buttons"
      }
    ]
  }
{% endschema %}