<div class="section-{{ section.id }} hp-text-images page-width">
  <div class="hp-text-images-content">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when 'subheading' -%}
          <h1>{{ block.settings.subheading }}</h1>
        {%- when 'heading' -%}
          <h3>{{ block.settings.heading }}</h3>
        {%- when 'description' -%}
          {{ block.settings.description }}
        {%- when 'buttons' -%}
          <div class="hp-text-images-buttons">
            {% if block.settings.button1 %}
              <a class="button primary-btn" href="{{ block.settings.button_1_url}}">{{ block.settings.button1 }}</a>
            {% endif %}
            {% if block.settings.button2 %}
              <a class="button secondry-btn" href="{{ block.settings.button_2_url }}">{{ block.settings.button2 }}</a>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "HP Text Images",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background"
      }
    ],
    "blocks": [
      {
        "type": "subheading",
        "name": "Sub Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub Heading"
          }
        ]
      }, {
        "type": "heading",
        "name": "Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      }, {
        "type": "description",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }, {
        "type": "buttons",
        "name": "Buttons",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "button1",
            "label": "Button-1"
          }, {
            "type": "url",
            "id": "button_1_url",
            "label": "Button 1 Url"
          }, {
            "type": "text",
            "id": "button2",
            "label": "Button-2"
          }, {
            "type": "url",
            "id": "button_2_url",
            "label": "Button 2 Url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "HP Text Images"
      }
    ]
  }
{% endschema %}