<style>
  .section-{{ section.id }} {
    background: url('{{ section.settings.background | image_url }}');
  }

  .hp-text-images {
    width: 100%;
    padding: 135px 25px 25px;
    background-size: cover;
    background-position: right;
    background-repeat: no-repeat;
    aspect-ratio: 15 / 9;
    display: flex;
    justify-content: start;
    align-items: center;
  }

  .hp-text-images-content {
    padding: 25px 25px 25px 80px;
    max-width: 750px;
  }

  .hp-text-images-content h3 {
    margin: 0 0 25px;
    max-width: 500px;
    font-size: 70px;
    font-weight: 600;
    color: #000;
    line-height: 1em;
  }

  .hp-text-images-content h1 {
    margin: 0 0 25px;
    font-size: 26px;
    line-height: 26px;
    color: #000;
  }

  .hp-text-images-content p {
    margin: 0 0 25px;
    max-width: 700px;
    color: #594545;
    font-weight: 400;
    font-size: 26px;
  }

  .hp-text-images-content .hp-text-images-buttons {
    margin: 0;
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }

  @media screen and (max-width: 756px) {
    .hp-text-images {
      padding: 20px;
    }

    .hp-text-images-content {
      padding: 15px;
      max-width: 700px;
      background-color: rgba(255, 255, 255, 0.4);
    }

    .hp-text-images-content h3 {
      margin: 0 0 15px;
      max-width: 250px;
      font-size: 21px;
      color: #000;
      line-height: 1em;
    }

    .hp-text-images-content h1 {
      margin: 0 0 15px;
      font-size: 16px;
      line-height: 26px;
      color: #000;
    }

    .hp-text-images-content p {
      margin: 0 0 15px;
      font-size: 14px;
      max-width: 700px;
      color: #594545;
      font-weight: 400;
    }

    .hp-text-images-content .hp-text-images-buttons {
      margin: 10px 0 0;
      display: flex;
      justify-content: space-between;
    }
  }

